{
  "name": "Instagram Yourself!",
  "version": "0.1.0",
  "description": "Extension helps you instagram effectively!",
  "icons": {
    "192": "images/icon.png"
  },
  "background": {
    "scripts": ["main.js", "credentials.js", "background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "background",
    "webRequest",
    "webRequestBlocking",
    "*://*.instagram.com/",
    "*://*/*"
  ],
  "content_scripts": [
   {
     "matches": [
       "https://caffeinum.github.io/*",
       "https://instagrambot.github.io/*",
       "*://localhost/*",
       "file://*/*"
     ],
     "js": [
       "main.js",
       "inject.js"
     ]
   }
 ],
  "manifest_version": 2
}
